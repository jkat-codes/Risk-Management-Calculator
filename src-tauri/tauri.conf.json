{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "risk-calculator",
  "version": "0.1.0",
  "identifier": "jkatcodes.calculator.com",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Risk Calculator",
        "label": "main",
        "minWidth": 1220,
        "minHeight": 1000,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": true,
        "useHttpsScheme": true,
        "width": 1220,
        "height": 1000,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ], 
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://GTIHUB_TOKEN_PLACEHOLDER@raw.githubusercontent.com/jkat-codes/Risk-Management-Calculator/releases/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI4OUYxNEM2RjIxNzNGMzAKUldRd1B4Znl4aFNmdUh3YXhYZHRlZENhSGlFYjBkRnZOMjhLNno5OFRsQ3A3MUNQeGR3UU9WVHkK"
    }
  }
}