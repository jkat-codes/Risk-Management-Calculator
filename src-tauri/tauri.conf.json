{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "risk-calculator",
  "version": "1.0.20",
  "identifier": "jkatcodes.calculator.com",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Risk Calculator",
        "label": "main",
        "minWidth": 1392,
        "minHeight": 1000,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": true,
        "useHttpsScheme": true,
        "width": 1220,
        "height": 1000,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/jkat-codes/Risk-Management-Calculator/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY3OTdGNDZDMTQ1Q0Q0MkYKUldRdjFGd1ViUFNYOStLWC8xalVHTWpma1pWVlh5UXRQT1pKOFl3anpOZy9xcllBZXFBbjlZZkcK"
    }
  }
}